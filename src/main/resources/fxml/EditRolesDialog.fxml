<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ButtonType?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<DialogPane prefHeight="260" prefWidth="350" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="gr.uoi.dit.master2025.gkouvas.dppclient.controller.EditRolesDialogController">

    <content>
        <VBox alignment="TOP_LEFT" spacing="15">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Επεξεργασία ρόλων χρήστη" />

            <Label fx:id="usernameLabel" style="-fx-font-size: 14px;" text="Χρήστης: " />

            <VBox spacing="8">
                <CheckBox fx:id="adminRole" text="ADMIN" />
                <CheckBox fx:id="supervisorRole" text="SUPERVISOR" />
                <CheckBox fx:id="techRole" text="TECHNICIAN" />
            </VBox>
        </VBox>
    </content>

    <buttonTypes>
        <ButtonType fx:id="saveButton" buttonData="OK_DONE" text="Αποθήκευση" />
        <ButtonType fx:id="cancelButton" buttonData="CANCEL_CLOSE" text="Ακύρωση" />
    </buttonTypes>

</DialogPane>
