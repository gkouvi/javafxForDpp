<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/23"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="gr.uoi.dit.master2025.gkouvas.dppclient.controller.CreateDeviceController"
      spacing="12">

    <padding>
        <Insets top="20" left="20" right="20" bottom="20"/>
    </padding>

    <Label text="Προσθήκη νέας συσκευής"
           style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">

        <Label text="Όνομα:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Τύπος:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="typeField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Σειριακός αριθμός:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="serialField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Firmware:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="firmwareField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Ημερομηνία εγκατάστασης:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dateField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Κατάσταση:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="statusField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Κτίριο ID:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextField fx:id="buildingIdField" editable="false" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#onCancel"/>
        <Button text="Create Device" onAction="#onCreate"/>
    </HBox>

</VBox>
