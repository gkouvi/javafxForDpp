<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane minWidth="-Infinity" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gr.uoi.dit.master2025.gkouvas.dppclient.controller.MaintenancePageController">
   <VBox AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
      <children>
          <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Συντηρήσεις">
            <font>
               <Font size="20.0" />
            </font>
         </Label>
          <TableView fx:id="maintenanceTable">
              <columns>
                  <TableColumn fx:id="colTarget" minWidth="200.0" text="Κτίριο / Συσκευή" />
                  <TableColumn fx:id="technicianColumn" minWidth="200.0" text="Τεχνικός" />
                  <TableColumn fx:id="descriptionColumn" minWidth="200.0" text="Περιγραφή" />
                  <TableColumn fx:id="dateColumn" minWidth="100.0" text="Ημερομηνία" />
              </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
          </TableView>
      
          <VBox>
              <children>
                  <Label alignment="CENTER" maxWidth="1.7976931348623157E308" prefHeight="38.0" prefWidth="496.0" styleClass="section-title" text="Επόμενη Συντήρηση" VBox.vgrow="ALWAYS">
                  <font>
                     <Font size="20.0" />
                  </font>
               </Label>
                  <TableView fx:id="upcomingMaintenanceTable" prefHeight="400.0" prefWidth="500.0" VBox.vgrow="ALWAYS">
                      <columns>
                          <TableColumn fx:id="upNameCol" text="Συσκευή" />
                          <TableColumn fx:id="upIntervalCol" text="Διάστημα" />
                          <TableColumn fx:id="upNextDateCol" text="Επόμενη συντήρηση" />
                      </columns>
                      <columnResizePolicy>
                          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                      </columnResizePolicy>
                  </TableView>
              </children>
          </VBox>
      </children>
   </VBox>


</AnchorPane>
