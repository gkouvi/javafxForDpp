<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="gr.uoi.dit.master2025.gkouvas.dppclient.controller.ResetPasswordDialogController"
            prefWidth="360">

    <content>
        <VBox spacing="15">
            <padding>
                <Insets top="20" bottom="20" left="20" right="20"/>
            </padding>

            <Label text="Επαναφορά κωδικού πρόσβασης"
                   style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

            <Label fx:id="usernameLabel" style="-fx-font-size: 14px;"/>

            <HBox spacing="10">
                <Label text="Νέος κωδικός πρόσβασης:" prefWidth="120"/>
                <PasswordField fx:id="newPasswordField" promptText="Εισαγωγή νέου κωδικού πρόσβασης"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Επιβεβαίωση κωδικού πρόσβασης:" prefWidth="120"/>
                <PasswordField fx:id="confirmPasswordField" promptText="Εισάγετε ξανά τον νέο κωδικό πρόσβασης"/>
            </HBox>

            <Label fx:id="errorLabel" textFill="red" visible="false"/>
        </VBox>
    </content>

    <buttonTypes>
        <ButtonType text="Επαναφορά" buttonData="OK_DONE"/>
        <ButtonType text="Ακύρωση" buttonData="CANCEL_CLOSE"/>
    </buttonTypes>

</DialogPane>
