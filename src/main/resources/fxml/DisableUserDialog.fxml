<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="gr.uoi.dit.master2025.gkouvas.dppclient.controller.DisableUserDialogController"
            prefWidth="380" prefHeight="210">

    <center>
        <VBox spacing="14" alignment="CENTER_LEFT" >
            <padding>
                <Insets top="20" left="20" right="20" bottom="20"/>
            </padding>
            <Label text="Disable / Enable User" style="-fx-font-size: 17px; -fx-font-weight: bold;" />

            <GridPane hgap="10" vgap="10">


                <Label text="Username:" GridPane.rowIndex="0"/>
                <Label fx:id="lblUsername" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Status:" GridPane.rowIndex="1"/>
                <Label fx:id="lblStatus" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            </GridPane>

            <Label fx:id="statusMessage" textFill="red" visible="false"/>

            <HBox spacing="10" alignment="CENTER_RIGHT" >
                <Button fx:id="btnToggle" text="Disable User"
                        onAction="#onToggle"
                        style="-fx-background-color: #d9534f; -fx-text-fill: white;" />
                <Button text="Close" onAction="#onClose" />
            </HBox>
        </VBox>
    </center>

</BorderPane>
