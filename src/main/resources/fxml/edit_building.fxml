<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="gr.uoi.dit.master2025.gkouvas.dppclient.controller.EditBuildingController"
      spacing="12">

    <padding>
        <Insets top="20" left="20" right="20" bottom="20"/>
    </padding>

    <Label text="Edit Building"
           style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">

        <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Address:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="addressField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Site ID:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="siteIdField"
                   GridPane.rowIndex="2" GridPane.columnIndex="1"
                   editable="false"/>
        <Label text="Αναφορά μοντέλου BIM:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="bimModelRefField" promptText="Αναφορά μοντέλου (Κτίριο_A.ifc)" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <Label text="Μορφή BIM" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <ComboBox fx:id="bimFormatCombo" prefHeight="26.0" prefWidth="149.0" promptText="Μορφή BIM" GridPane.columnIndex="1" GridPane.rowIndex="4" />


    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#onCancel"/>
        <Button text="Save" onAction="#onSave"/>
    </HBox>

</VBox>
