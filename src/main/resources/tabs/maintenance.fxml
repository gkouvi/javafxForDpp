<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gr.uoi.dit.master2025.gkouvas.dppclient.controller.MaintenanceController">
    <padding>
        <Insets bottom="15" left="15" right="15" top="15" />
    </padding>

    <HBox spacing="20">
        <Button fx:id="addLogButton" text="Προσθήκη αρχείου καταγραφής συντήρησης" />
    </HBox>

    <TableView fx:id="maintenanceTable" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="400">
        <columns>
            <TableColumn fx:id="colId" prefWidth="50" text="ID" />
            <TableColumn fx:id="colDate" prefWidth="120" text="Ημερομηνία" />
            <TableColumn fx:id="colTech" prefWidth="140" text="Τεχνικός" />
            <TableColumn fx:id="colDesc" prefWidth="300" text="Περιγραφή" />
        </columns>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
    </TableView>

</VBox>
