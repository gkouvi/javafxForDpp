<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gr.uoi.dit.master2025.gkouvas.dppclient.controller.MetadataController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Title -->
    <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="30.0" prefWidth="278.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Μεταδεδομένα" />

    <!-- Metadata info area -->
    <VBox fx:id="infoBox" spacing="10" style="-fx-background-color: transparent;">
    </VBox>

    <!-- QR SECTION -->
    <VBox alignment="CENTER" spacing="15">

        <ImageView fx:id="qrImage" fitHeight="200" fitWidth="200" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 12, 0, 0, 0);" />

        <HBox fx:id="qrButtonsBox" alignment="CENTER" spacing="12">
            <Button onAction="#onExportQr" text="Εξαγωγή QR" />
            <Button onAction="#onPrintQr" text="Εκτύπωση QR" />
            <Button onAction="#onScanQr" text="Σάρωση QR" />

        </HBox>


    </VBox>

</VBox>
