<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gr.uoi.dit.master2025.gkouvas.dppclient.controller.DocumentsController">
   <children>
      <VBox spacing="10">
      <padding>
          <Insets bottom="15" left="15" right="15" top="15" />
      </padding>
      
          <HBox spacing="20">
              <Button fx:id="btnUpload" text="Ανεβάστε έγγραφο" />
              <Button fx:id="btnDownload" text="Λήψη επιλεγμένων" />
          </HBox>
      
          <TableView fx:id="documentsTable" prefHeight="400">
              <columns>
                  <TableColumn fx:id="colId" prefWidth="50" text="ID" />
                  <TableColumn fx:id="colFilename" prefWidth="220" text="Όνομα αρχείου" />
                  <TableColumn fx:id="colType" prefWidth="120" text="Τύπος" />
                  <TableColumn fx:id="colUploadedAt" prefWidth="160" text="Ανεβάστηκε στις" />
              </columns>
          </TableView>
      
      </VBox>
   </children>
</AnchorPane>
