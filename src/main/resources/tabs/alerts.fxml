<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gr.uoi.dit.master2025.gkouvas.dppclient.controller.AlertsController">
   <children>
      <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
      
          <padding>
              <Insets bottom="15" left="15" right="15" top="15" />
          </padding>
      
          <HBox spacing="20">
              <Button fx:id="addAlertButton" text="Προσθήκη ειδοποίησης" />
          </HBox>
      
          <TableView fx:id="alertsTable" prefHeight="400">
              <columns>
                  <TableColumn fx:id="colId" prefWidth="50" text="ID" />
                  <TableColumn fx:id="colMessage" prefWidth="200" text="Μήνυμα" />
                  <TableColumn fx:id="colDueDate" prefWidth="120" sortType="DESCENDING" text="Ημερομηνία" />
                  <TableColumn fx:id="colStatus" prefWidth="120" text="Κατάσταση" />
              </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
          </TableView>
      
      </VBox>
   </children>
</AnchorPane>
